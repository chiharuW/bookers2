 <p id="notice p-2"></p>

 <div class="container">
  <div class="row">
   <div class="col-md-8">
    <h2>User info</h2>

    <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
     <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
   <% end %>

    <%= form_with model: @user do |f| %>
     <div class="form_group mt-3">
      <label for="inputName">Name</label>
       <br><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
     </div>
     <div class="form_group mt-3">
      <label for="inputImage">Image</label>
       <br><%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
     </div>
     <div class="form_group mt-3">
      <label for="inputintroduction">Introduction</label>
      <br><%= f.text_area :introduction, autofocus: true, id:"inputintroduction", placeholder:"introduction" %>
     </div>
     <div class="form_group mt-3">
      <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
     </div>
    <% end %>
   </div>
  </div>
 </div>
</main>