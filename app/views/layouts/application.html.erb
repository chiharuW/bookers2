  <head>
    <title>Bookers2</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>

  <body>
   <header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
     <a class="navbar-brand" href="/">
      <span>Bookers</span>
     </a>
     <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
       <% if user_signed_in? %>
        <li>
         <%= link_to root_path, class: 'nav-link text-light p-2' do %>
          <i class="fas fa-home"></i>Home
         <% end %>
        </li>
        <li>
         <%= link_to users_path, class: 'nav-link text-light p-2' do %>
          <i class="fas fa-users"></i>Users
         <% end %>
         </li>

        <li>
         <%= link_to books_path, class: 'nav-link text-light p-2' do %>
         <i class="fas fa-book-open"></i>Books
         <% end %>
        </li>

        <li>
         <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light p-2' do %>
         <i class="fas fa-sign-out-alt"></i>Log out
         <% end %>
         </li>

       <% else %>

        <li>
         <%= link_to root_path, class: 'nav-link text-light p-2' do %>
          <i class="fas fa-home"></i>Home
         <% end %>
        </li>

        <li>
         <%= link_to about_path, class: 'nav-link text-light p-2' do %>
         <i class="fas fa-link"></i>About
         <% end %>
         </li>

        <li>
         <%= link_to new_user_registration_path, class: 'nav-link text-light p-2' do %>
         <i class="fas fa-user-plus"></i>Sign up
         <% end %>
         </li>

        <li>
         <%= link_to new_user_session_path, class: 'nav-link text-light p-2' do %>
         <i class="fas fa-sign-in-alt"></i>Log in
         <% end %>
        </li>

       <% end %>
      </ul>
      </div>
      </div>
    </nav>
   </header>

   <main>
    <div class="container">
    <div class="row">
    <%= render 'layouts/notification' %>
    <%= yield %>
    </div>
    </div>
   </main>

   <footer>
    <div class="container mt-5">
     <div class="row">
      <div class="col-2 mx-auto">
    	 	<p>CopyRight Infratop.inc</p>
     	</div>
     	</div>
     </div>
   </footer>

  </body>




</html>
