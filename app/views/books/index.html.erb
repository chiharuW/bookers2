<main>
<%= render 'list', book: @book %>

 <div class="col-md-7">
  <h2 class="mt-3">Books</h2>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Body</th>
    </tr>
     <% @books.each do |book| %>
    <tr>
     <td>
    <% if current_user.profile_image.attached? %>
     <%= image_tag current_user.profile_image, size: "100x100" %>
    <% else %>
     <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
     </td>
     <td>
      <%= link_to book_path(book.id) do %>
       <%= book.title %>
      <% end %>
     </td>
     <td>
      <span><%= book.body %></span>
     </td>
     <td>
     </td>
    </tr>
     <% end %>
  </table>
  </div>
 </div>
</main>



