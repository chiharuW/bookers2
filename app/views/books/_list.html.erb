 <p id="notice p-2"></p>

<div class="container px-5">
 <div class="row">
  <div class="col-md-4">
   <h2>User info</h2>
    <% if current_user.profile_image.attached? %>
     <%= image_tag current_user.profile_image, size: "100x100" %>
    <% else %>
     <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
    <table class="table">
     <tr>
      <th class="px-2">name</th>
      <th class="pl-5"><%= current_user.name %></th>
     </tr>
      <tr>
       <th class="px-2">introduction</th>
       <th class="pl-5"><%= current_user.introduction %></th>
      </tr>
    </table>

    <div class="form_group mt-3">
     <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fas fa-user-cog"></i>
     <% end %>
    </div>

   <h2 class="mt-3">New book</h2>
    <%= form_with model: book do |f| %>
     <div class="form_group mt-3">
      <label for="books_title">Title</label>
      <br><%= f.text_field :title, autofocus: true, id:"inputName" %>
     </div>
     <div class="form_group mt-3">
      <label for="books_body">Opinion</label>
      <br><%= f.text_area :body %>
     </div>
     <div class="form_group mt-3">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
     </div>
    <% end %>
  </div>